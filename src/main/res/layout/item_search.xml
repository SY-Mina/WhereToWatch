<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/searchedPoster"
        android:layout_width="180dp"
        android:layout_height="270dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="빈센조"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/searchedYear"
        app:layout_constraintStart_toEndOf="@id/searchedPoster" />


    <TextView
        android:id="@+id/searchedYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="2021"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/searchedGenre"
        app:layout_constraintStart_toEndOf="@id/searchedPoster" />


    <TextView
        android:id="@+id/searchedGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="드라마"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchedPoster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="평점: "
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/searchedGenre"
        app:layout_constraintTop_toBottomOf="@id/searchedGenre" />

    <TextView
        android:id="@+id/searchedPopularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/tvPop"
        app:layout_constraintTop_toBottomOf="@id/searchedGenre" />

    <TextView
        android:id="@+id/searchedAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성인"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/searchedPoster"
        app:layout_constraintTop_toBottomOf="@id/searchedGenre" />

