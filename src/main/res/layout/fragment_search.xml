<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/searchTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:background="@drawable/grey_box">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/search"
                android:backgroundTint="@color/grey"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:hint="제목, 감독, 배우로 검색(초성)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:enabled="true"
                android:background="@null"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnErase"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_vertical"
            android:background="@color/black"
            android:text="취소"
            android:textSize="18sp"
            android:textStyle="bold"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchTexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchTop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/searchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="빈센조"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="'"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/searchInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="검색결과"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchTexts"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        tools:listitem="@layout/item_search"/>


</androidx.constraintlayout.widget.ConstraintLayout>