<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navTop"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/blackGrey"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:background="@color/black"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Where to Watch"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </com.google.android.material.navigation.NavigationView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabsGenre"
        app:layout_constraintTop_toBottomOf="@id/navTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/white"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/CustomTabText">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영화" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabDrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="드라마"/>

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/tvRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기"
        app:layout_constraintStart_toStartOf="@id/tabsGenre"
        app:layout_constraintBottom_toBottomOf="@id/spinner_genre"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/spinner_genre"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/tabsGenre"
        app:layout_constraintStart_toEndOf="@id/tvRanking"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/dropdown_bg"/>

    <FrameLayout
        android:id="@+id/frameRanking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_genre"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRanking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frameRanking"
        app:layout_constraintBottom_toBottomOf="@id/frameRanking"
        tools:listitem="@layout/img_item"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>